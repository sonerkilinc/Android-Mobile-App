<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hakkinda"
    android:background="@color/blue3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/tx1" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Nasıl oynanır" android:textSize="25dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tx2" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_below="@id/tx1" android:layout_marginTop="20dp"
        android:textSize="16dp" android:text="@string/yazi1"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tx3"
        android:layout_below="@id/tx2" android:layout_marginTop="20dp"
        android:textStyle="bold" android:textSize="16dp"
        android:text="@string/yazi2"
        />
    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tx4"
        android:layout_below="@id/tx3" android:layout_marginTop="20dp"
        android:textStyle="bold" android:textSize="16dp"
        android:text="@string/yazi3"
        />
    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tx5"
        android:layout_below="@id/tx4" android:layout_marginTop="20dp"
        android:textStyle="bold" android:textSize="16dp"
        android:text="@string/yazi4"
        />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

