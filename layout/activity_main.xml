<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/acıkmavi">
    <ScrollView
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:src="@drawable/logo" android:layout_marginTop="-55dp"
                />
            <Button
                android:id="@+id/btn1" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_centerVertical="true"
                android:layout_marginBottom="5dp" android:background="@drawable/custom_button"
                android:padding="15dp" android:text="Öğreniyorum"
                android:layout_marginTop="-30dp" android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <Button
                android:id="@+id/btn2" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_below="@id/btn1"
                android:padding="15dp" android:text="bilgi yarışması"
                android:background="@drawable/custom_button" android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                />
            <Button
                android:layout_marginBottom="5dp" android:id="@+id/btn3"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="15dp" android:layout_below="@id/btn2"
                android:text="çiz-eğlen" android:background="@drawable/custom_button"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                />
            <Button
                android:layout_marginBottom="5dp" android:id="@+id/btn4"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="15dp" android:layout_below="@id/btn3"
                android:text="müzik çal" android:background="@drawable/custom_button"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                />
            <Button
                android:id="@+id/btn5" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="15dp"
                android:layout_below="@id/btn4" android:text="nasıl kullanılır"
                android:background="@drawable/custom_button" android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

